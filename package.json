{
    "name": "react-typescript",
    "version": "2.0.0",
    "description": "Analog to outdated 'npx create-react-app'",
    "scripts": {
        "start": "webpack serve --mode development --progress --hot --config ./configs/webpack.config.development.js",
        "build": "webpack --mode production --config ./configs/webpack.config.production.js",
        "lint": "eslint --config ./configs/.eslintrc.json . --ext .ts,.tsx",
        "lint:fix": "eslint --config ./configs/.eslintrc.json . --ext .ts,.tsx --fix",
        "test": "jest --coverage",
        "test:watch": "jest --watch"
    },
    "keywords": [
        "react",
        "typescript",
        "webpack",
        "scss"
    ],
    "author": "Dumetella",
    "dependencies": {
        "react": "^17.0.2",
        "react-dom": "^17.0.2"
    },
    "devDependencies": {
        "@types/jest": "^27.4.0",
        "@types/react": "^17.0.39",
        "@types/react-dom": "^17.0.11",
        "@types/webpack": "^5.28.0",
        "@typescript-eslint/eslint-plugin": "^5.12.1",
        "@typescript-eslint/parser": "^5.12.1",
        "clean-webpack-plugin": "^4.0.0",
        "copy-webpack-plugin": "^10.2.4",
        "css-loader": "^6.6.0",
        "eslint": "^8.9.0",
        "eslint-config-prettier": "^8.4.0",
        "eslint-plugin-jest": "^26.1.1",
        "file-loader": "^6.2.0",
        "html-webpack-plugin": "^5.5.0",
        "jest": "^27.5.1",
        "mini-css-extract-plugin": "^2.5.3",
        "postcss": "^8.4.6",
        "postcss-loader": "^6.2.1",
        "postcss-preset-env": "^7.4.1",
        "sass": "^1.49.8",
        "sass-loader": "^12.6.0",
        "style-loader": "^3.3.1",
        "terser-webpack-plugin": "^5.3.1",
        "ts-jest": "^27.1.3",
        "ts-loader": "^9.2.6",
        "typescript": "^4.5.5",
        "webpack": "^5.69.1",
        "webpack-cli": "^4.9.2",
        "webpack-dev-server": "^4.7.4"
    }
}